<?xml version="1.0" encoding="UTF-8"?>
<!-- This is an unmanaged datasource. It should be used for proofs of concept 
   or testing only. It uses H2, an in memory database that ships with JBoss 
   AS. -->
   <datasources>
         <datasource jndi-name="java:jboss/datasources/houtMySqlDatabase" enabled="true" use-java-context="true" pool-name="houtMySqlDatabase" use-ccm="true">
               <connection-url>jdbc:postgresql://${env.OPENSHIFT_POSTGRESQL_DB_HOST}:${env.OPENSHIFT_POSTGRESQL_DB_PORT}/${env.OPENSHIFT_APP_NAME}
    	</connection-url>
    	<driver>postgresql</driver>
    	<security>
        	<user-name>${env.OPENSHIFT_POSTGRESQL_DB_USERNAME}</user-name>
        	<password>${env.OPENSHIFT_POSTGRESQL_DB_PASSWORD}</password>
    	</security>
    	<validation>
        	<check-valid-connection-sql>SELECT 1</check-valid-connection-sql>
    	</validation>
	</datasource>
            <drivers>
                <driver name="postgresql" module="org.postgresql">
 				<xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
 				</driver>
            </drivers>
        </datasources> 